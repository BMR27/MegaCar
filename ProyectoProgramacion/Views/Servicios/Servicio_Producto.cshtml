

@section CSS{
    <link href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.common.min.css" rel="stylesheet" />
    <link href="https://kendo.cdn.telerik.com/2020.2.617/styles/kendo.blueopal.min.css" rel="stylesheet" />
}
@{
    ViewBag.Title = "Servicio y Producto";
}
<div class="container">
    <div class="jumbotron">
        <h1>@this.ViewBag.Title</h1>
        <p>Mantenimiento de los servicios y productos, insertar, modificar e eliminar</p>
    </div>

    <div id="divListaServicios">

    </div>
    <div class="row">
        <div class="col-sm-8">
            <div id="divAlertaElimina" class="alert alert-success">
                <label id="lblElimina"></label>
            </div>
        </div>
        <div class="col-sm-4">

        </div>
    </div>
</div>

<div class="container">
    <h2>Mantenimiento de Servicios y Productos</h2>
    <!-- Button to Open the Modal -->
    <button type="button" class="btn btn-primary" name="btnRegistrarServicio" id="btnRegistrarServicio" data-toggle="modal" data-target="#myModal">Registrar Servicio</button>
    <button type="button" class="btn btn-primary" name="btnModificar" id="btnModificar" value="Modificar" data-toggle="modal" data-target="#myModal">Modificar Servicio</button>
    <button type="button" class="btn btn-danger" name="btnEliminar" id="btnEliminar">Eliminar Servicio</button>

    <!-- The Modal -->
    <div class="modal fade" id="myModal" data-backdrop="static">
        <div class="modal-dialog">
            <div class="modal-content">

                <!-- Modal Header -->
                <div class="modal-header">
                    <h4 class="modal-title">Registro de nuevo Servicio</h4>
                    <button type="button" class="close" data-dismiss="modal">×</button>
                </div>

                <!-- Modal body -->
                <div class="modal-body">
                    <center>
                        <form id="frmRegistroServicio" action="/" method="post">
                            <div class="form-group">
                                <label>Nombre del servicio</label>        
                                <input class="form-control" type="text" name="C_NOMBRE_SERVICIO" id="C_NOMBRE_SERVICIO" placeholder="Ingrese un servicio" value="" />
                            </div>
                            <div id="divIdServicio" class="form-group">
                                <label>Id de servicio</label>
                                <input class="form-control" type="text" name="C_ID_SERVICIO" id="C_ID_SERVICIO" value="" readonly />
                            </div>
                            <div class="form-group">
                                <label>Precio</label>                             
                                <input class="form-control" type="text" name="C_PRECIO" id="C_PRECIO" placeholder="Ingrese un precio" value="" />
                            </div>
                            <div class="form-group">
                                <div id="AlertaExito" class="alert alert-success">
                                    <label id="lblMensaje"></label>
                                </div>
                            </div>
                        </form>
                    </center>
                </div>

                <!-- Modal footer -->
                <div class="modal-footer">
                    <input type="button" class="btn btn-success" name="btnRegistrar" id="btnRegistrar" value="Registrar Servicio" form="frmRegistroServicio" />
                    <input type="button" class="btn btn-success" name="btnModificarServicio" id="btnModificarServicio" value="Modificar Servicio" form="frmRegistroServicio" />
                    <button type="reset" class="btn btn-warning" form="frmRegistroServicio">Limpiar</button>
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Cerrar</button> 
                </div>

            </div>
        </div>
    </div>


</div>

@Html.ValidationSummary(true)
@section Scripts{

    <script src="https://kendo.cdn.telerik.com/2020.2.617/js/kendo.all.min.js"></script>
    <script src="https://kendo.cdn.telerik.com/2020.2.617/js/jszip.min.js"></script>
    <script src="~/Scripts/ScriptGenerico.js"></script>
    <script src="~/Scripts/Servicios/Servicios.js"></script>
}



