@{
    ViewBag.Title = "Home Page";
}

<div class="jumbotron">
    <h1>Servicios Automotriz</h1>
    <p class="lead">Lavado de autos, pulimos su vehiculo y todo tipo de reparaciones</p>
    <button type="button" class="btn btn-primary btn-lg" data-toggle="modal" data-target="#FormularioInicio">
        Iniciar Sesion
    </button>
</div>

<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <ol id="olCarousel" class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/Imagenes/1.jpg" />
        </div>

        <div class="item">
            <img src="~/Imagenes/2.jpg" />
        </div>

        <div class="item">
            <img src="~/Imagenes/3.jpg" />
        </div>

    </div>

    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Anterior</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Siguiente</span>
    </a>
</div>



<!-- Modal -->
<form class="form-control">
    <div class="modal fade" id="FormularioInicio" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" data-backdrop="static">
        <div class="modal-dialog" role="alertdialog">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Inicio Sesion</h4>
                </div>
                <div class="modal-body">
                    <div class="form-group">
                        <center>
                            <input type="text" name="NombreUsuario" placeholder="Nombre de Usuario" value="" class="form-control" />
                        </center>
                    </div>
                    <div class="form-group">
                        <center>
                            <input type="password" name="Contraseña" placeholder="Contraseña" value="" class="form-control" />
                        </center>
                    </div>
                    <div class="form-group">
                        <center>
                            <input type="submit" class="btn btn-success form-control" name="btnIniciar" id="btnIniciar" value="Iniciar" style="background-color:dodgerblue" />
                        </center>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-default" data-dismiss="modal">Cerrar</button>
                </div>
            </div>
        </div>
    </div>
</form>
