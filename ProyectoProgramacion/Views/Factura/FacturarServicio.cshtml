
@section CSS{
    <link href="~/Content/Facturar.css" rel="stylesheet" />

}
@{
    ViewBag.Title = "Facturar Servicio";
}
<div class="container">
    <div class="jumbotron">
        <h2>@this.ViewBag.Title</h2>
        <p>Facturación de servicios</p>
    </div>
    <div class="row">
        <center>
            <div class="col-sm-6">
                <form action="/" method="post">
                    <div class="form-group">
                        <label>Cliente</label>
                        <select id="cliente" name="cliente" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <label>Vehículo</label>
                        <select id="vehiculo" name="vehiculo" class="form-control">
                        </select>
                    </div>
                    <div id="divServicio" class="form-group">
                        <label>Servicios</label>
                        <select id="servicio" name="servicio" class="form-control">
                        </select>
                    </div>
                    <div class="form-group">
                        <div id="divPrecioServicio">
                            <input type="number" name="C_PRECIO" value="" class="form-control" />
                        </div>
                        <div id="divAlertaPrecio" class="alert alert-info">
                            <label id="mensajePrecio"></label>
                        </div>
                        <div id="divModificar">
                            <input type="button" name="btnModificarPrecio" id="ModificarPrecio" value="Modificar Precio" class="btn btn-primary" />
                        </div>
                    </div>
                    <div id="divCrearFactura" class="form-group">
                        <input type="button" name="btnCrearFactura" id="btnCrearFactura" value="Nueva Factura" class="btn btn-success" />
                        <div id="divAlertaCrearFactura" class="alert alert-success">
                            <label id="mensajeCreaFactura"></label>
                        </div>
                    </div>
                </form>
            </div>
        </center>
    </div>
    <hr />
    <div class="row">
        <div class="col-sm-8">
            <label id="facturaNumero">Numero Factura</label>
        </div>
        <div class="col-sm-4">

        </div>
    </div>
    <div class="row">
        <div id="DivTablaFacturacion">

        </div>
    </div>
    <div class="row">
        <div class="col-sm-7 col-lg-9">

        </div>
        <div class="col-sm-5 col-lg-3">
            <div class="row" id="Totales">
                <div class="col col-sm-6 ">
                    <label>Subtotal:</label>
                    <br />
                    <label>Total Impuesto:</label>
                    <br />
                    <label>Impuesto:</label>
                    <br />
                    <label>Total</label>
                </div>
                <div class="col col-sm-6">
                    <label>125000</label>
                    <br />
                    <label>1250</label>
                    <br />
                    <label>13%</label>
                    <br />
                    <label>126250</label>
                </div>
            </div>
        </div>
    </div>
</div>

@Html.ValidationSummary(true)
@section Scripts{

} 